version: '3.1'
services:

  mongo:
    image: mongo:4.4.8
    restart: always
    volumes:
      - /opt/solartis-mongo/db:/data/db
      - /opt/solartis-mongo/configdb:/data/configdb
    ports:
      - "{{ ip }}:27017:27017"
    environment:
      MONGO_INITDB_ROOT_USERNAME: root
      MONGO_INITDB_ROOT_PASSWORD: welcome*1

